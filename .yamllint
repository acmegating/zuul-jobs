extends: default
ignore: |
  .tox

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  comments-indentation: disable
  document-start: disable
  empty-lines:
    max: 1
    max-end: 2
  indentation:
    level: error
    indent-sequences: consistent
  new-line-at-end-of-file: disable
  line-length: disable
  truthy: false
